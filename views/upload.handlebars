<!DOCTYPE html>
<html>
  <head>
    <title>Basic File Upload</title>
    <script src="/assets/client.js"></script>
  </head>
    
  <body>
    <form ref='uploadForm' 
      id='uploadForm' 
      action='/upload' 
      method='post' 
      encType="multipart/form-data">
        <input type="file" name="sampleFile" />
        <input type='submit' value='Upload!' />
    </form> 
    
    <form ref='retrieveForm' 
      id='retrieveForm' 
      action='/retrieve' 
      method='get'>
      <label for='fileName'>Retrieve File By ID: </label>
      <input name='_id' type='text' />
      <input type='submit' value='Retrieve!' />
    </form>

    {{!-- image displayed with id in src, e.g. below --}}
    {{!-- <img id="lastImage" src="/retrieve?_id=IMAGE_ID" style="max-width: 500px;"/> --}}

    <section id="messages"></section>
  </body>
</html>
